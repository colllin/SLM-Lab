{
  "ppo_cont": {
    "agent": [{
      "name": "PPO",
      "algorithm": {
        "name": "PPO",
        "action_pdtype": "default",
        "action_policy": "default",
        "explore_var_spec": null,
        "gamma": 0.99,
        "lam": 0.95,
        "clip_eps_spec": {
          "name": "no_decay",
          "start_val": 0.20,
          "end_val": 0.20,
          "start_step": 0,
          "end_step": 0
        },
        "entropy_coef_spec": {
          "name": "no_decay",
          "start_val": 0.01,
          "end_val": 0.01,
          "start_step": 0,
          "end_step": 0
        },
        "val_loss_coef": 0.5,
        "training_frequency": 2048,
        "minibatch_size": 64,
        "training_epoch": 5
      },
      "memory": {
        "name": "OnPolicyBatchReplay",
      },
      "net": {
        "type": "MLPNet",
        "shared": false,
        "hid_layers": [256, 128],
        "hid_layers_activation": "tanh",
        "init_fn": "orthogonal_",
        "normalize": true,
        "batch_norm": false,
        "clip_grad_val": 0.5,
        "use_same_optim": true,
        "loss_spec": {
          "name": "MSELoss"
        },
        "actor_optim_spec": {
          "name": "Adam",
          "lr": 1e-4,
        },
        "critic_optim_spec": {
          "name": "Adam",
          "lr": 1e-4,
        },
        "lr_scheduler_spec": null,
        "gpu": true
      }
    }],
    "env": [{
      "name": "${env}",
      "num_envs": 16,
      "max_t": null,
      "max_tick": 2e6
    }],
    "body": {
      "product": "outer",
      "num": 1
    },
    "meta": {
      "distributed": false,
      "log_frequency": 20000,
      "eval_frequency": 20000,
      "max_tick_unit": "total_t",
      "max_session": 4,
      "max_trial": 24,
      "param_spec_process": 4
    },
    "spec_params": {
      "env": [
        "RoboschoolAnt-v1", "BipedalWalker-v2", "RoboschoolHalfCheetah-v1", "RoboschoolHopper-v1", "RoboschoolInvertedPendulum-v1", "Pendulum-v0"
      ]
    },
    "search": {
      "agent": [{
        "algorithm": {
          "entropy_coef_spec": {
            "end_val__uniform": [0.0, 0.01]
          },
          "training_frequency__choice": [512, 1024, 2048],
          "training_epoch__choice": [4, 6, 8, 10],
        },
        "net": {
          "actor_optim_spec": {
            "lr__uniform": [0.00005, 0.001]
          },
        }
      }]
    }
  }
}
